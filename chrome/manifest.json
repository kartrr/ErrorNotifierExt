{
  "manifest_version": 3,
  "name": "QA Error Notifier",
  "version": "0.2.0",
  "description": "Shows popup notifications for JS/Promise/console.error on the page. Deduplication and quick navigation to DevTools.",
  "permissions": ["notifications", "storage", "scripting", "activeTab", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "bg.js" },
  "action": { "default_title": "QA Error Notifier" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pageHook.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
